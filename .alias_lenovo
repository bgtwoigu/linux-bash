#!/bin/bash
# Configure the aliases of bash
# This file is from lenove laptop
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias sl='sl -e'
alias alais='alias'
alias vi='vim'
alias vas='vi ~/.bash_aliases'
alias vrc='vi ~/.bashrc'
alias src='source ~/.bashrc'
alias pg='ps aux | grep'
alias g='grep -insr'
alias f='find . -iname'
alias ag='alias|grep'
alias hg='history|grep'
alias ig='ifconfig|grep'
alias cmds='history|tail>>~/cmds'
alias fip='ifconfig eth0 | grep "inet addr"'
